<BoxContainer
    xmlns="https://spacestation14.io"
    Margin="8"
    Orientation="Vertical"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch"
    HorizontalExpand="True"
    VerticalExpand="True">
    <Label
        Text="{Loc 'pda-messaging-contacts-heading'}"
        Align="Center"/>
    <PanelContainer
        Margin="8"
        StyleClasses="LowDivider"/>
    <ScrollContainer
        VerticalExpand="True"
        HScrollEnabled="False">
        <BoxContainer
            Name="Recipients"
            Orientation="Vertical"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            HorizontalExpand="True"
            Access="Public"/>
    </ScrollContainer>
</BoxContainer>
