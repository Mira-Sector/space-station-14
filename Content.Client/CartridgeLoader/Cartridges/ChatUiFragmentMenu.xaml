<PanelContainer
    xmlns="https://spacestation14.io"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch"
    HorizontalExpand="True"
    VerticalExpand="True">
    <BoxContainer
        Margin="8"
        Orientation="Vertical"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        HorizontalExpand="True"
        VerticalExpand="True">
        <Label
            Text="{Loc 'pda-messaging-contacts-heading'}"
            Align="Center"/>
        <PanelContainer
            Margin="8"
            StyleClasses="LowDivider"/>
        <ScrollContainer
            VerticalExpand="True"
            HScrollEnabled="False"
            ReturnMeasure="True">
            <BoxContainer
                Name="Recipients"
                Orientation="Vertical"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                HorizontalExpand="True"
                VerticalExpand="True"
                Access="Public"/>
        </ScrollContainer>
    </BoxContainer>
</PanelContainer>
