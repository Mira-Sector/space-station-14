<BoxContainer
    xmlns="https://spacestation14.io"
    Margin="2"
    Orientation="Vertical"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Top"
    HorizontalExpand="True"
    VerticalExpand="True">
    <BoxContainer
        HorizontalAlignment="Left"
        VerticalAlignment="Top"
        HorizontalExpand="True">
        <Label
            Name="SenderName"
            Margin="2"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Access="Public"/>
        <Label
            Name="SenderId"
            Margin="2"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Access="Public"/>
    </BoxContainer>
    <PanelContainer
        Name="Content"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        HorizontalExpand="True"
        VerticalExpand="True"
        Access="Public"/>
</BoxContainer>
