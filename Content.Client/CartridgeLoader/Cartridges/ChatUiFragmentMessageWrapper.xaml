<BoxContainer
    xmlns="https://spacestation14.io"
    Margin="2"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Center"
    HorizontalExpand="True">
    <BoxContainer
        HorizontalAlignment="Left"
        VerticalAlignment="Top">
        <Label
            Name="SenderName"
            Margin="2"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"/>
        <Label
            Name="SenderId"
            Margin="2"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"/>
    </BoxContainer>
    <PanelContainer
        Margin="4"
        StyleClasses="LowDivider"/>
    <PanelContainer
        Name="Content"
        HorizontalAlignment="Left"
        VerticalAlignment="Stretch"
        HorizontalExpand="True"
        VerticalExpand="True"/>
</BoxContainer>
