<BoxContainer
    xmlns="https://spacestation14.io"
    xmlns:cartridges="clr-namespace:Content.Client.CartridgeLoader.Cartridges"
    Orientation="Vertical"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch"
    HorizontalExpand="True"
    VerticalExpand="True">
    <PanelContainer
        StyleClasses="PanelBackgroundLight"
        SetHeight="64"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Center"
        HorizontalExpand="True">
        <BoxContainer
            HorizontalAlignment="Left"
            VerticalAlignment="Stretch">
            <TextureRect
                Name="ContactIcon"
                Stretch="Tile"
                Margin="8"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"/>
            <Label
                Name="ContactName"
                Margin="2"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"/>
            <Label
                Name="ContactId"
                Margin="2"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"/>
        </BoxContainer>
        <BoxContainer
            Margin="8"
            HorizontalAlignment="Right"
            VerticalAlignment="Stretch">
            <cartridges:ChatUiFragmentSettingsButton
                Name="SettingsButton"
                Margin="8 0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                VerticalExpand="True"/>
            <cartridges:ChatUiFragmentHomeButton
                Name="HomeButton"
                Margin="8 0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                VerticalExpand="True"/>
        </BoxContainer>
    </PanelContainer>
    <PanelContainer
        StyleClasses="LowDivider"/>
    <ScrollContainer
        Name="Scroll"
        VerticalExpand="True"
        HScrollEnabled="False">
        <BoxContainer
            Name="Messages"
            Orientation="Vertical"/>
    </ScrollContainer>
    <BoxContainer
        Orientation="Vertical"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Bottom"
        HorizontalExpand="True">
        <PanelContainer
            StyleClasses="LowDivider"/>
        <PanelContainer
            StyleClasses="PanelBackgroundBaseDark">
            <BoxContainer
                HorizontalAlignment="Stretch"
                HorizontalExpand="True">
                <LineEdit
                    Name="TextInput"
                    PlaceHolder="{Loc 'pda-messaging-text-message-placeholder'}"
                    Margin="8"
                    HorizontalExpand="True"/>
            </BoxContainer>
        </PanelContainer>
    </BoxContainer>
</BoxContainer>
