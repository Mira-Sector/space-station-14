<Button
    xmlns="https://spacestation14.io"
    Margin="8"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Center"
    HorizontalExpand="True">
    <BoxContainer
        Margin="4"
        HorizontalAlignment="Left"
        VerticalAlignment="Center">
        <TextureRect
            Name="Icon"
            Stretch="Tile"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"/>
        <PanelContainer
            Margin="8 0"
            StyleClasses="LowDivider"/>
        <Label
            Name="Name"
            Margin="2"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"/>
        <Label
            Name="Id"
            Margin="2"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"/>
    </BoxContainer>
    <BoxContainer
        Margin="4"
        HorizontalAlignment="Right"
        VerticalAlignment="Center">
        <Label
            Name="UnreadCount"
            Margin="2"
            Visible="False"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"/>
    </BoxContainer>
</Button>
