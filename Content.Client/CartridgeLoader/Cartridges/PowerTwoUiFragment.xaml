<PanelContainer
    xmlns="https://spacestation14.io"
    xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
    xmlns:cartridges="clr-namespace:Content.Client.CartridgeLoader.Cartridges"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch"
    HorizontalExpand="True"
    VerticalExpand="True">
    <PanelContainer
        Name="Popup"
        Access="Public"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        HorizontalExpand="True"
        VerticalExpand="True"/>
    <BoxContainer
        Margin="8"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        HorizontalExpand="True"
        VerticalExpand="True">
        <BoxContainer
            Name="GameGridRows"
            Access="Public"
            Orientation="Vertical"
            Align="Center"
            HorizontalAlignment="Center"
            VerticalExpand="True"/>
        <PanelContainer
            StyleClasses="LowDivider"
            Margin="8 0"/>
        <BoxContainer
            Orientation="Vertical"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            HorizontalExpand="True"
            VerticalExpand="True"
            Margin="16">
            <controls:StripeBack
                HorizontalExpand="True">
                <BoxContainer
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Top"
                    HorizontalExpand="True"
                    Margin="8">
                    <RichTextLabel
                        Name="TimeText"
                        Access="Public"
                        HorizontalAlignment="Center"
                        HorizontalExpand="True"/>
                </BoxContainer>
            </controls:StripeBack>
            <BoxContainer
                Orientation="Vertical"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Bottom"
                HorizontalExpand="True"
                VerticalExpand="True">
                <Button
                    Name="ToggleSound"
                    ToggleMode="True"
                    Text="{Loc 'power-two-sound-on'}"
                    TextAlign="Center"
                    Access="Public"
                    Margin="2"
                    HorizontalExpand="True"/>
                <cartridges:PowerTwoUiNewGameButton
                    Name="NewGame"
                    Access="Public"
                    Margin="2"
                    HorizontalExpand="True"/>
            </BoxContainer>
        </BoxContainer>
    </BoxContainer>
</PanelContainer>
