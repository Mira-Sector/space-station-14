<DefaultWindow
    xmlns="https://spacestation14.io"
    xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
    Title="{Loc 'modsuit-interface-title'}"
    MinSize="512 768">
    <BoxContainer
        Orientation="Vertical"
        HorizontalExpand="True"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        Margin="8">
        <controls:StripeBack
            HasTopEdge="False"
            HasBottomEdge="False"
            HasMargins="False">
            <PanelContainer StyleClasses="PdaBorderRect">
                <BoxContainer
                    Name="SealContainer"
                    Visible="False"
                    Margin="16"
                    VerticalAlignment="Top"
                    Access="Public">
                    <PanelContainer
                        Name="SealPanel"
                        StyleClasses="PanelBackgroundBaseDark"
                        Access="Public">
                    </PanelContainer>
                    <BoxContainer
                        Margin="16"/>
                    <PanelContainer StyleClasses="PanelBackgroundLight">
                        <BoxContainer
                            Name="SealButtons"
                            Margin="16, 4"
                            Orientation="Vertical"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Access="Public"/>
                    </PanelContainer>
                </BoxContainer>
            </PanelContainer>
        </controls:StripeBack>
        <BoxContainer>
            <PanelContainer StyleClasses="LowDivider" />
        </BoxContainer>
        <ScrollContainer
            Margin="16, 8, 0, 8"
            HorizontalExpand="True"
            VerticalExpand="True"
            HScrollEnabled="False">
            <PanelContainer StyleClasses="PanelBackgroundBaseDark">
                <BoxContainer
                    Name="ModuleList"
                    Margin="0, 0, 16, 0"
                    Orientation="Vertical"
                    HorizontalExpand="True"
                    HorizontalAlignment="Stretch"
                    Access="Public"/>
            </PanelContainer>
        </ScrollContainer>
    </BoxContainer>
</DefaultWindow>
