<PanelContainer
    xmlns="https://spacestation14.io"
    HorizontalExpand="True"
    VerticalExpand="True">
    <BoxContainer
        Margin="16"
        HorizontalExpand="True"
        VerticalExpand="True">
        <BoxContainer
            VerticalExpand="True"
            Margin="16, 0">
            <PanelContainer
                StyleClasses="PanelBackgroundBaseDark">
                <TextureRect
                    Stretch="KeepAspectCentered"
                    SetSize="96, 96"
                    Name="SpecialIcon"
                    Access="Public"/>
            </PanelContainer>
        </BoxContainer>
        <BoxContainer
            Margin="16, 0">
            <Label
                Name="SpecialDescription"
                Access="Public"/>
        </BoxContainer>
    </BoxContainer>
</PanelContainer>
